<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/majorstar"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout

    android:id="@+id/majorstarone"
    android:paddingLeft="50px"
    android:paddingTop="50px"
    android:paddingRight="50px"
    android:layout_width="match_parent"
    android:layout_height="450px">
    <TextView
        android:id="@+id/tvmajor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="52px"
        android:text="①"
        android:textColor="#fff"
        />
<TextView
    android:layout_toRightOf="@+id/tvmajor2"
    android:id="@+id/tvmajorone"
    android:layout_width="500px"
    android:layout_height="wrap_content"
    android:textSize="52px"
    android:text="暂无信息"
    android:textColor="#fff"
    />
    <TextView
        android:id="@+id/tvmajor1"
        android:layout_below="@+id/tvmajorone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:text="薪资状况:"
        android:textColor="#fff"
        />
    <TextView
        android:id="@+id/xinzione"
        android:layout_marginLeft="50px"
        android:layout_toRightOf="@+id/tvmajor1"
        android:layout_below="@+id/tvmajorone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:text="暂无信息"
        android:textColor="#ff6700"
        />
    <ImageView
        android:id="@+id/img_xihuanone"
        android:layout_alignParentRight="true"
        android:layout_marginRight="200px"
        android:src="@drawable/bgbxq"
        android:layout_width="80px"
        android:layout_height="80px" />
    <ImageView
        android:id="@+id/imgyiwenone"
        android:layout_alignParentRight="true"
        android:src="@drawable/yiwen"
        android:layout_width="80px"
        android:padding="2px"
        android:layout_height="80px"  />
    <TextView
        android:id="@+id/tvmajor3"
        android:layout_below="@+id/tvmajor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:text="培养目标:"
        android:textColor="#fff"
        />

    <TextView
        android:id="@+id/tvpymbone"
        android:layout_below="@+id/tvmajor3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="42px"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="#fff"
        />
</RelativeLayout>
    <RelativeLayout
        android:visibility="invisible"
        android:id="@+id/majorstartwo"
        android:paddingLeft="50px"
        android:paddingTop="50px"
        android:paddingRight="50px"
        android:layout_width="match_parent"
        android:layout_height="450px">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/white"
            ></View>
        <TextView
            android:id="@+id/tvmajor7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="52px"
            android:text="②"
            android:textColor="#fff"
            />
        <TextView
            android:layout_toRightOf="@+id/tvmajor7"
            android:id="@+id/tvmajortwo"
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:textSize="52px"
            android:text="经济统计学"
            android:textColor="#fff"
            />
        <TextView
            android:id="@+id/tvmajor5"
            android:layout_below="@+id/tvmajortwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:text="薪资状况:"
            android:textColor="#fff"
            />
        <TextView
            android:id="@+id/xinzitwo"
            android:layout_marginLeft="50px"
            android:layout_toRightOf="@+id/tvmajor5"
            android:layout_below="@+id/tvmajortwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:text="暂无信息"
            android:textColor="#ff6700"
            />
        <ImageView
            android:id="@+id/img_xihuantwo"
            android:layout_alignParentRight="true"
            android:layout_marginRight="200px"
            android:src="@drawable/bgbxq"
            android:layout_width="80px"
            android:layout_height="80px" />
        <ImageView
            android:id="@+id/imgyiwentwo"
            android:layout_alignParentRight="true"
            android:src="@drawable/yiwen"
            android:layout_width="80px"
            android:padding="2px"
            android:layout_height="80px" />
        <TextView
            android:id="@+id/tvmajor6"
            android:layout_below="@+id/tvmajor5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:text="培养目标:"
            android:textColor="#fff"
            />

        <TextView
            android:id="@+id/tvpymbtwo"
            android:layout_below="@+id/tvmajor6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="42px"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="#fff"
            />
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/white"
            ></View>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="invisible"
        android:id="@+id/majorstarsan"
        android:paddingLeft="50px"
        android:paddingTop="50px"
        android:paddingRight="50px"
        android:layout_width="match_parent"
        android:layout_height="450px">

        <TextView
            android:id="@+id/tvmajor8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="52px"
            android:text="③"
            android:textColor="#fff"
            />
        <TextView
            android:layout_toRightOf="@+id/tvmajor8"
            android:id="@+id/tvmajorsan"
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:textSize="52px"
            android:text="经济统计学"
            android:textColor="#fff"
            />
        <TextView
            android:id="@+id/tvmajor9"
            android:layout_below="@+id/tvmajorsan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:text="薪资状况:"
            android:textColor="#fff"
            />
        <TextView
            android:id="@+id/xinzisan"
            android:layout_marginLeft="50px"
            android:layout_toRightOf="@+id/tvmajor9"
            android:layout_below="@+id/tvmajorsan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:text="暂无信息"
            android:textColor="#ff6700"
            />
        <ImageView
            android:id="@+id/img_xihuansan"
            android:layout_alignParentRight="true"
            android:layout_marginRight="200px"
            android:src="@drawable/bgbxq"
            android:layout_width="80px"

            android:layout_height="80px"/>
        <ImageView
            android:id="@+id/imgyiwensan"
            android:layout_alignParentRight="true"
            android:src="@drawable/yiwen"
            android:layout_width="80px"
            android:padding="2px"
            android:layout_height="80px" />
        <TextView
            android:id="@+id/tvmajor10"
            android:layout_below="@+id/tvmajor9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:text="培养目标:"
            android:textColor="#fff"
            />

        <TextView
            android:id="@+id/tvpymbsan"
            android:layout_below="@+id/tvmajor10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="42px"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="#fff"
            />
    </RelativeLayout>
</LinearLayout>
