<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffff"
    android:layout_height="match_parent"
    tools:context="com.example.login_demo.OneTableXQActivity">
    <RelativeLayout
        android:id="@+id/rl_onetable_xq"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="#fff"
        >
        <ImageView
            android:padding="10px"
            android:id="@+id/onetablexq_iv_back"
            android:layout_width="150px"
            android:layout_height="90px"
            android:layout_gravity="center"
            android:src="@mipmap/left"
            android:layout_centerVertical="true"/>
        <TextView
            android:text="一分一段表"
            android:textColor="#2c2c2c"
            android:textSize="50px"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>


    <com.weavey.loading.lib.LoadingLayout
        android:id="@+id/lodiing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:isFirstVisible="false"
        android:layout_below="@id/view1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.weavey.loading.lib.LoadingLayout>

    <ProgressBar
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/pgb"
        android:layout_marginTop="700px"
        android:layout_centerHorizontal="true"
        />
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ccc"
        android:layout_below="@id/rl_onetable_xq"></View>
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view1">
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view1"
        android:visibility="gone">


    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="#fff"

        >
        <View
            android:id="@+id/view3"
            android:layout_marginLeft="50px"
            android:layout_centerVertical="true"
            android:background="#3B9EFF"
            android:layout_width="10px"
            android:layout_height="60px">
        </View>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/view3"
            android:layout_marginLeft="20px"
            android:textColor="#2c2c2c"
            android:textSize="50px"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ccc"
        android:layout_below="@id/rl_title"></View>

    <RelativeLayout
        android:id="@+id/rl_time"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_below="@id/view2"
        >
        <ImageView
            android:id="@+id/iv_dian"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:src="@drawable/back_circleblcak"
            />
        <TextView
            android:id="@+id/tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_dian"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            />
    </RelativeLayout>
            <LinearLayout
                android:id="@+id/MyTable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 android:orientation="vertical"
                android:layout_below="@id/rl_time"
                android:layout_marginLeft="100px"
                android:layout_marginRight="100px"
                >
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
