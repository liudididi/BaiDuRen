<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.login_demo.OneTableActivity">
    <RelativeLayout
        android:id="@+id/rl_onetable"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="#fff"
        >
        <ImageView
            android:padding="10px"
            android:id="@+id/onetable_iv_back"
            android:layout_width="150px"
            android:layout_height="90px"
            android:layout_gravity="center"
            android:src="@mipmap/left"
            android:layout_centerVertical="true"/>
        <TextView
            android:text="一分一段表"
            android:textColor="#2c2c2c"
            android:textSize="50px"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/location"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50px"/>
    </RelativeLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ccc"
        android:layout_below="@id/rl_onetable"></View>

    <LinearLayout
        android:id="@+id/onetable_ll"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:orientation="horizontal"
        android:layout_below="@id/view1"
        android:background="#fff"
        android:gravity="center"
        >
    <RelativeLayout
        android:id="@+id/onetable_rl_arts"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="150px"
        >
        <TextView
            android:id="@+id/onetable_tv_arts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文科"
            android:textSize="50px"
            android:layout_centerInParent="true"/>
        <View
            android:layout_width="1px"
            android:layout_height="50px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#ccc"
            ></View>
        <View
            android:id="@+id/view_arts"
            android:layout_width="100px"
            android:layout_height="5px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#3B9DFE"
            android:visibility="visible"/>
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/onetable_rl_science"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150px"
            >
            <TextView
                android:id="@+id/onetable_tv_science"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="理科"
                android:textSize="50px"
                android:layout_centerInParent="true"/>
            <View
                android:layout_width="1px"
                android:layout_height="50px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#ccc"
                ></View>
            <View
                android:id="@+id/view_science"
                android:layout_width="100px"
                android:layout_height="5px"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="#3B9DFE"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="#ccc"
        android:layout_below="@id/onetable_ll"></View>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/onetable_rv"
        android:layout_below="@id/view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:visibility="gone">
    </android.support.v7.widget.RecyclerView>
    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_centerInParent="true"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/onetable_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/none"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>
