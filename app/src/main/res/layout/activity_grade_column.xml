<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.login_demo.GradeColumnActivity">

    <RelativeLayout
        android:id="@+id/rl_GradeColumn"
        android:layout_width="match_parent"
        android:layout_height="120px"
        >
        <ImageView
            android:padding="10px"
            android:id="@+id/gradeColumn_iv_back"
            android:layout_width="150px"
            android:layout_height="90px"
            android:layout_gravity="center"
            android:src="@mipmap/left"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/grade_column_tv"
            android:text="考试信息"
            android:textColor="#2c2c2c"
            android:textSize="50px"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ccc"
        android:layout_below="@id/rl_GradeColumn"
        ></View>

    <RelativeLayout
        android:layout_below="@id/view"
        android:layout_width="match_parent"
        android:layout_height="900px"
        >
        <View
            android:layout_width="1px"
            android:layout_height="700px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100px"
            android:background="#ccc"></View>
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_centerVertical="true"
           android:layout_alignParentBottom="true"
            android:layout_marginBottom="100px"
            android:layout_marginLeft="100px"
            android:background="#ccc"
           ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="135px"
            android:layout_marginRight="80px"
            android:layout_marginBottom="30px"
            android:gravity="center"
            >
            <TextView
                android:text="语文"
                android:textSize="30px"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:text="数学"
                android:textSize="30px"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_marginLeft="6px"
                android:layout_height="wrap_content" />
            <TextView
                android:text="英语"
                android:textSize="30px"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
            android:text="物理"
            android:textSize="30px"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
            <TextView
                android:text="化学"
                android:textSize="30px"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:text="生物"
                android:textSize="30px"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:text="历史"
                android:textSize="30px"
                android:layout_width="0px"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:text="地理"
                android:textSize="30px"
                android:layout_width="0px"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <TextView
                android:text="政治"
                android:textSize="30px"
                android:layout_width="0px"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:text="特长"
                android:textSize="30px"
                android:layout_width="0px"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="100px"
            >
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"/>
        <untils.HistogramGrade
            android:id="@+id/column1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <untils.HistogramGrade
                android:id="@+id/column2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <untils.HistogramGrade
                android:id="@+id/column3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <untils.HistogramGrade
                android:id="@+id/column4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <untils.HistogramGrade
                android:id="@+id/column5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <untils.HistogramGrade
                android:id="@+id/column6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <untils.HistogramGrade
                android:id="@+id/column7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <untils.HistogramGrade
                android:id="@+id/column8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <untils.HistogramGrade
                android:id="@+id/column9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <untils.HistogramGrade
                android:id="@+id/column10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
