<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.login_demo.GradePolyLineActivity">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="120px"
        >
        <ImageView
            android:padding="10px"
            android:id="@+id/gradepl_iv_back"
            android:layout_width="150px"
            android:layout_height="90px"
            android:layout_gravity="center"
            android:src="@mipmap/left"
            android:layout_centerVertical="true"/>
        <TextView
            android:text="成绩对比"
            android:textColor="#2c2c2c"
            android:textSize="50px"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_12"

        android:layout_width="250px"
        android:layout_height="80px"
        android:layout_marginTop="140px"
        android:background="@drawable/back_two"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30px"

        >
        <TextView
            android:text="综合"
            android:textColor="#3B9EFF"
            android:id="@+id/tv_condition"
            android:gravity="center"
            android:layout_width="200px"
            android:layout_height="100px" />
        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50px"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50px"
            android:visibility="gone"/>
    </RelativeLayout>



    <RelativeLayout

        android:layout_marginTop="110px"
        android:id="@+id/re_up"
        android:layout_below="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="600px"
        >
    </RelativeLayout>
    <TextView
        android:layout_marginLeft="50px"
        android:layout_marginTop="50px"
        android:textSize="40px"
        android:layout_below="@+id/rl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上半年分数对比"
        />
    <RelativeLayout

        android:layout_marginTop="50px"
        android:id="@+id/re_down"
        android:layout_below="@+id/re_up"
        android:layout_width="match_parent"
        android:layout_height="600px"
        >

    </RelativeLayout>

    <TextView
        android:layout_marginLeft="50px"
        android:textSize="40px"
        android:layout_below="@+id/re_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下半年分数对比"
        />
    <ListView


        android:id="@+id/gradepl_lv"
        android:layout_width="match_parent"
        android:layout_height="800px"
        android:layout_below="@id/rl_12"
        android:background="#fff"
        android:visibility="gone"
        >
    </ListView>
</RelativeLayout>
