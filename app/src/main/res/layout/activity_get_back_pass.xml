<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="122px"
    tools:context="com.example.login_demo.GetBackPassActivity">

    <RelativeLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="120px"
        >

        <ImageView
            android:padding="10px"
            android:id="@+id/getback_iv_left"
            android:layout_width="150px"
            android:layout_height="90px"
            android:layout_gravity="center"
            android:src="@mipmap/left"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/getback_title"
            android:text=""
            android:textColor="#2c2c2c"
            android:textSize="50px"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ll_top"
        android:background="#cdcdcd"
        android:id="@+id/view2">

    </View>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="170px"
        android:layout_marginRight="30px"
        android:layout_marginLeft="30px"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="180px"
        android:hint="请输入手机号码"
        android:textSize="45px"
        android:id="@+id/getback_phone"
        android:theme="@style/MyEditText"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="170px"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/getback_phone"
        android:layout_marginTop="10px"
        android:hint="请输入短信验证码"
        android:textSize="45px"
        android:layout_marginRight="30px"
        android:layout_marginLeft="30px"
        android:theme="@style/MyEditText"
        android:id="@+id/getback_code" />
    <TextView
        android:id="@+id/getback_captcha"
        android:layout_width="270px"
        android:layout_height="90px"
        android:layout_alignParentRight="true"
        android:textSize="40px"
        android:textColor="#fff"
        android:layout_below="@+id/textView"
        android:layout_marginTop="220px"
        android:layout_marginRight="45px"
        android:background="@drawable/back_guanzhu"
        android:gravity="center"
        android:text="获取验证码" />

    <TextView
        android:id="@+id/getback_Countdown"
        android:textColor="#e6e6e6"
        android:textSize="40px"
        android:layout_marginRight="45px"
        android:layout_width="270px"
        android:layout_height="90px"
        android:layout_alignBaseline="@+id/getback_phone"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/back_countdown"
        android:visibility="gone"
        android:gravity="center"
        android:text=""
       />
    <TextView
        android:layout_width="270px"
        android:layout_height="90px"
        android:layout_alignBaseline="@+id/getback_phone"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textSize="40px"
        android:textColor="#fff"
        android:layout_marginRight="45px"
        android:background="@drawable/back_guanzhu"
        android:gravity="center"
        android:text="0S"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/getback_pass"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_marginRight="30px"
        android:layout_alignLeft="@+id/tv_login"
        android:layout_alignStart="@+id/tv_login"
        android:layout_below="@+id/getback_code"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30px"
        android:hint="请重新设置密码（6-12位字母或数字）"
        android:textSize="45px"
        android:inputType="textPassword"
        android:theme="@style/MyEditText" />
    <ImageView
        android:id="@+id/getback_iv_close"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_marginRight="40px"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/getback_code"
        android:layout_marginTop="70px"
        android:layout_marginLeft="30px"
        android:src="@mipmap/close"
        android:visibility="visible"
        />
    <ImageView
        android:id="@+id/getback_iv_open"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_marginRight="40px"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/getback_code"
        android:layout_marginTop="70px"
        android:layout_marginLeft="30px"
        android:src="@mipmap/open"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/getback_pass"
        android:layout_marginTop="120px"
        android:background="@drawable/back_register"
        android:gravity="center"
        android:text="确定"
        android:textColor="#e6e6e6"
        android:textSize="48px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"/>
</RelativeLayout>
