<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.login_demo.HelpActivity">
    <RelativeLayout
        android:id="@+id/rl_help"
        android:layout_width="match_parent"
        android:layout_height="120px"
        >
        <ImageView
            android:padding="10px"
            android:id="@+id/help_iv_back"
            android:layout_width="150px"
            android:layout_height="90px"
            android:layout_gravity="center"
            android:src="@mipmap/left"
            android:layout_centerVertical="true"/>
        <TextView
            android:text="帮助"
            android:textColor="#2c2c2c"
            android:textSize="50px"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#ccc"
        android:layout_below="@id/rl_help">
    </View>

    <RelativeLayout
        android:id="@+id/my_help"
        android:layout_marginTop="20px"
        android:layout_below="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="120px"
        >
        <TextView
            android:textColor="@color/black"
            android:text="1.如何使用APP？"
            android:textSize="50px"
            android:gravity="center"
            android:layout_marginLeft="50px"
            android:layout_marginTop="20px"
            android:layout_width="wrap_content"
            android:layout_height="80px" />
        <ImageView
            android:src="@drawable/right_arrow"
            android:layout_marginTop="40px"
            android:layout_marginRight="30px"
            android:layout_width="45px"
            android:layout_height="45px"
            android:layout_alignParentRight="true"
            />
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:background="#ccc">
        </View>
    </RelativeLayout>
    <RelativeLayout

        android:layout_marginTop="20px"
        android:layout_below="@+id/my_help"
        android:layout_width="match_parent"
        android:layout_height="120px"

        >

        <TextView
            android:textColor="@color/black"
            android:text="2.如何进行性格测试？"
            android:textSize="50px"
            android:gravity="center"
            android:layout_marginLeft="50px"
            android:layout_marginTop="20px"
            android:layout_width="wrap_content"
            android:layout_height="80px" />
        <ImageView
            android:src="@drawable/right_arrow"
            android:layout_marginTop="40px"
            android:layout_marginRight="30px"
            android:layout_width="45px"
            android:layout_height="45px"
            android:layout_alignParentRight="true"
            />
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:background="#ccc">
        </View>
    </RelativeLayout>
</RelativeLayout>
