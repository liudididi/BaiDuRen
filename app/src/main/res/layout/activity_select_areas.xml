<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.login_demo.SelectAreasActivity">
    <RelativeLayout
        android:id="@+id/provice_title"
        android:layout_width="match_parent"
        android:layout_height="120px"
        >
        <ImageView
            android:padding="10px"
            android:id="@+id/area_iv_back"
            android:layout_width="150px"
            android:layout_height="90px"
            android:layout_gravity="center"
            android:src="@mipmap/left"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/area_tvtitle"
            android:text="选择区县"
            android:textColor="#2c2c2c"
            android:textSize="50px"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <View
        android:id="@+id/se_view"
        android:layout_below="@+id/provice_title"
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:background="#F2F2F2"
        ></View>
    <android.support.v7.widget.RecyclerView
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_below="@+id/se_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/area_recycle"
        ></android.support.v7.widget.RecyclerView>


</RelativeLayout>
