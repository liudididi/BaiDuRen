<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.login_demo.MoreMajorActivity">


    <RelativeLayout
        android:id="@+id/mmajor_title"
        android:layout_width="match_parent"
        android:layout_height="120px"
        >
        <ImageView
            android:padding="10px"
            android:id="@+id/mschool_iv_back"
            android:layout_width="150px"
            android:layout_height="90px"
            android:layout_gravity="center"
            android:src="@mipmap/left"
            android:layout_centerVertical="true"/>
        <TextView
            android:text="专业库"
            android:textColor="#2c2c2c"
            android:textSize="50px"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            ></View>
    </RelativeLayout>

    <LinearLayout
     android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:id="@+id/mmajorll"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_below="@id/mmajor_title"
        >
        <RelativeLayout
            android:id="@+id/rl_sprint"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="120px"
            >
            <TextView
                android:id="@+id/mmajor_tvben"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本科"
                android:textSize="50px"
                android:layout_centerInParent="true"/>
            <View
                android:layout_width="2px"
                android:layout_height="50px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#ccc"
                ></View>
            <View
                android:id="@+id/mmajor_vben"
                android:layout_width="80px"
                android:layout_height="5px"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/red"
                android:visibility="visible">
            </View>
            <View
                android:layout_marginBottom="2px"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/black"
                ></View>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_reliable"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="120px"
            >
            <TextView
                android:id="@+id/mmajor_tvzhuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="专科"
                android:textSize="50px"
                android:layout_centerInParent="true"/>
            <View

                android:id="@+id/mmajor_vzhuan"
                android:layout_width="80px"
                android:layout_height="5px"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/red"
                android:visibility="gone"/>
            <View
                android:layout_marginBottom="2px"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/black"
                ></View>
        </RelativeLayout>
    </LinearLayout>
    <ExpandableListView
        android:scrollbars="none"
        android:layout_marginTop="10px"
        android:paddingLeft="50px"
        android:paddingRight="50px"
        android:layout_below="@+id/mmajorll"
        android:id="@+id/tree_view_simple"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </ExpandableListView>
    <ProgressBar
        android:visibility="visible"
        android:id="@+id/mmajor_pb"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20px"
        android:layout_marginTop="10px"
        android:layout_width="100px"
        android:layout_height="100px"
        />

</RelativeLayout>
