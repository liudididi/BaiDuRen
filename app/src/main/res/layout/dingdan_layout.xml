<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="140px">
        <ImageView
            android:id="@+id/iv_chahao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cha"
            android:layout_marginLeft="38px"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="54px"
            android:text="确认订单"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#F3F3F3"
        android:layout_below="@id/rl1"></View>
    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="114px"
        android:layout_below="@id/view1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="42px"
            android:textColor="#666666"
            android:layout_marginLeft="54px"
            android:text="订单编号:"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_bianhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="42px"
            android:textColor="#333333"
           android:layout_marginRight="54px"
            android:layout_alignParentRight="true"
            android:text="1234567890"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#F3F3F3"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_below="@id/rl2"></View>
    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="114px"
        android:layout_below="@id/view2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="42px"
            android:textColor="#666666"
            android:layout_marginLeft="54px"
            android:text="订单名称:"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_mingcheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="42px"
            android:textColor="#333333"
            android:layout_marginRight="54px"
            android:layout_alignParentRight="true"
            android:text="EFC精准志愿表"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#F3F3F3"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_below="@id/rl3"></View>
    <RelativeLayout
        android:id="@+id/rl4"
        android:layout_width="match_parent"
        android:layout_height="114px"
        android:layout_below="@id/view3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="42px"
            android:textColor="#666666"
            android:layout_marginLeft="54px"
            android:text="支付金额:"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textSize="54px"
            android:textColor="#FF0000"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="160px"
            />
        <TextView
            android:id="@+id/diangdan_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="54px"
            android:textColor="#FF0000"
            android:layout_marginRight="54px"
            android:layout_alignParentRight="true"
            android:text="698"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="14px"
        android:background="#F3F3F3"
        android:layout_below="@id/rl4"></View>
    <TextView
        android:id="@+id/tv_fangshi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择支付方式"
        android:textSize="38px"
        android:textColor="#999999"
        android:layout_below="@id/view4"
        android:layout_marginLeft="54px"
        android:layout_marginTop="20px"/>
    <RelativeLayout
        android:id="@+id/rl5"
        android:layout_width="match_parent"
        android:layout_height="114px"
        android:layout_below="@id/tv_fangshi">
        <ImageView
            android:id="@+id/iv_weixin"
            android:layout_width="54px"
            android:layout_height="54px"
           android:src="@drawable/weixin"
            android:layout_marginLeft="54px"
            android:layout_centerVertical="true"
            android:layout_marginRight="26px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40px"
            android:textColor="#666666"
            android:text="微信支付"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_weixin"/>
        <ImageView
            android:id="@+id/iv_weixin_dui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xuanzhong"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="54px"
            android:visibility="visible"/>
    </RelativeLayout>
    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#F3F3F3"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_below="@id/rl5"></View>
    <RelativeLayout
        android:id="@+id/rl6"
        android:layout_width="match_parent"
        android:layout_height="114px"
        android:layout_below="@id/view5">
        <ImageView
            android:id="@+id/iv_zhifubao"
            android:layout_width="54px"
            android:layout_height="54px"
            android:src="@drawable/zhifubao"
            android:layout_marginLeft="54px"
            android:layout_centerVertical="true"
            android:layout_marginRight="26px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40px"
            android:textColor="#666666"
            android:text="支付宝支付"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_zhifubao"/>
        <ImageView
            android:id="@+id/iv_zhifubao_dui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xuanzhong"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="54px"
            android:visibility="gone"/>
    </RelativeLayout>
    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/rl6"
        android:background="#F3F3F3"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        ></View>
    <TextView
        android:id="@+id/tv_queren"
        android:layout_width="918px"
        android:layout_height="118px"
        android:text="确认支付"
        android:background="@drawable/bg_profession"
        android:gravity="center"
        android:textSize="50px"
        android:textColor="#fff"
        android:layout_below="@id/view6"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50px"
        android:layout_marginTop="200px"/>

</RelativeLayout>