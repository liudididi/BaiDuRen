<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.login_demo.CollegeTitleActivity">
    <RelativeLayout
        android:id="@+id/college_rl"
        android:layout_width="match_parent"
        android:layout_height="120px"
        >
        <ImageView
            android:padding="10px"
            android:id="@+id/college_iv_back"
            android:layout_width="150px"
            android:layout_height="90px"
            android:layout_gravity="center"
            android:src="@mipmap/left"
            android:layout_centerVertical="true"/>
        <TextView
            android:text="高考头条"
            android:textColor="#2c2c2c"
            android:textSize="50px"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="#ccc"
            ></View>
    </RelativeLayout>
    <com.stx.xhb.xbanner.XBanner
        android:id="@+id/college_xbanner"
        android:layout_width="match_parent"
        android:layout_height="320px"
        app:AutoPlayTime="2000"
        android:layout_below="@id/college_rl">

    </com.stx.xhb.xbanner.XBanner>
    <LinearLayout
        android:background="#fff"
        android:id="@+id/college_ll"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_below="@id/college_xbanner"
        >
        <RelativeLayout
            android:id="@+id/college_rl_one"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="120px"
            >
            <TextView
                android:id="@+id/college_tv_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高考新闻"
                android:textSize="50px"
                android:layout_centerInParent="true"/>
            <View
                android:layout_width="1px"
                android:layout_height="50px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#ccc"
                ></View>
            <View
                android:id="@+id/view_studentin1"
                android:layout_width="200px"
                android:layout_height="8px"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="#3B9DFE"
                android:visibility="visible">
            </View>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/college_rl_two"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="120px"
            >
            <TextView
                android:id="@+id/college_tv_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高考轶事"
                android:textSize="50px"
                android:layout_centerInParent="true"/>
            <View
                android:id="@+id/view_studentin"
                android:layout_width="200px"
                android:layout_height="5px"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="#3B9DFE"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="8px"
        android:background="#ccc"
        android:layout_below="@id/college_ll"></View>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/college_rv"
        android:layout_below="@id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</RelativeLayout>
